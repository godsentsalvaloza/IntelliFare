---
title: Calculate | IntelliFare
layout: "base.njk"
import: "/contaner/command/calculate"
---

<!-- Main Content-->
<main id="main-content">
  {%- for post in collections.homepage -%}

  <section class="calculator-container" data-aos="fade-in">
    <div class="inner-container">
      <h1>Silangan Cubao (AFPHODA) Jeepney Line</h1>
      <hr />
      <form>
        <label for="startOption">Departure: </label>
        <select name="" id="startOption" onchange="setStartStation()">
          <option selected disabled>-- Choose a station --</option>
          <option value="0">North Avenue</option>
          <option value="1">Quezon Avenue</option>
          <option value="2">GMA Kamuning</option>
          <option value="3">Araneta - Cubao</option>
          <option value="4">Santolan - Annapolis</option>
          <option value="5">Ortigas</option>
          <option value="6">Shaw Boulevard</option>
          <option value="7">Boni</option>
          <option value="8">Guadalupe</option>
          <option value="9">Buendia</option>
          <option value="10">Ayala</option>
          <option value="11">Magallanes</option>
          <option value="12">Taft Avenue</option>
        </select>
        <br />
        <br />
        <label for="endOption">Destination: </label>
        <select name="" id="endOption" onchange="setEndStation()">
          <option selected disabled>-- Choose a station --</option>
          <option value="0">North Avenue</option>
          <option value="1">Quezon Avenue</option>
          <option value="2">GMA Kamuning</option>
          <option value="3">Araneta - Cubao</option>
          <option value="4">Santolan - Annapolis</option>
          <option value="5">Ortigas</option>
          <option value="6">Shaw Boulevard</option>
          <option value="7">Boni</option>
          <option value="8">Guadalupe</option>
          <option value="9">Buendia</option>
          <option value="10">Ayala</option>
          <option value="11">Magallanes</option>
          <option value="12">Taft Avenue</option>
        </select>

        <button
          type="button"
          onclick="calculate(startStation, endStation)"
          class="calculate-button"
        >
          Calculate
        </button>
      </form>
      <hr />

      <div id="fareDisplaySection">
        <div>
          <p class="fare-text-desc">
            Estimated Fare: <span id="text-fare">₱0</span>
          </p>
          <p class="fare-text-desc">
            Estimated Discounted fare: <span id="textDiscount">₱0</span>
          </p>
          <p class="fare-text-desc">
            Estimated Travel Time: <span id="travelTime">0 minute</span>
          </p>
        </div>
      </div>
    </div>

    <!-- Section for data results-->
  </section>

  {%- endfor -%}
</main>
<!-- / Main Content-->
