---
import: "/contaner/command/index"
---

{%- for post in collections.homepage -%}
<!DOCTYPE html>
<html lang="en-PH">
  <head>
    <!-- Metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="IntelliFare" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{{ title }}</title>

    <!-- Favicon -->
    <link
      rel="shortcut icon"
      href="{{ post.data.website_logo }}"
      type="image/x-icon"
    />

    <!-- Local CSS Library -->
    <link rel="stylesheet" href="/styles/style.css" />

    <!-- Google Fonts CSS Library -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans&amp;display=swap"
      rel="stylesheet"
    />
    <!-- BootStrap CSS Library -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- AOS CSS Library -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <!-- FontAwesome CSS Library -->
    <script
      src="https://kit.fontawesome.com/0f4e99929e.js"
      crossorigin="anonymous"
    ></script>

    <script
      defer
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script>
  </head>
  <body style="background-color: #333">
    <!-- Templating -->
    {% include 'header.njk'%}
    {{ content | safe }}
    {% include 'footer.njk'%}

    <!-- Bootstrap JS Library -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>

    <!-- AOS JS Library -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({
        duration: 800,
        once: false,
        mirror: true,
      });

      document.addEventListener("DOMContentLoaded", function () {
        function isMobile() {
          return window.innerWidth <= 530; // Adjust breakpoint as needed
        }

        if (isMobile()) {
          AOS.init({
            disable: true, // Disables AOS globally
          });
        } else {
          AOS.init(); // Normal initialization for desktop
        }
      });
    </script>
    <!-- Local JS -->
    <script src="/scripts/out/script.js"></script>

    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>
<!-- There is a light that never goes out -->
{%- endfor -%}
